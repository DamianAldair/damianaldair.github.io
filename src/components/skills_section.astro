---
import { skills, type Skill } from "../scripts/repo";
import SkillItem from "./skill_item.astro";
---

<section id="skills">
    <h2>Conocimientos y aptitudes</h2>
    <div>
        {
            skills.map((s: Skill) => (
                <SkillItem name={s.name} r={s.r} g={s.g} b={s.b} />
            ))
        }
    </div>
</section>

<style>
    div {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        align-content: center;
        justify-content: center;
        gap: 29px;
    }
</style>
