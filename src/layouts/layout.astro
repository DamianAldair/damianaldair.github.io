---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";

const title: string = "Damian Aldair";
const description: string =
	"Porfolio de Damian Aldair para ver experiencia, proyectos llevados a cabo y aptitudes.";

const maxwidth = "800px";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer maxwidth={maxwidth} />
	</body>
</html>

<style define:vars={{ maxwidth }}>
	html,
	body {
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	html {
		display: flex;
		flex-direction: column;
		flex-wrap: nowrap;
		align-items: center;
		background: rgb(2, 0, 36);
		background: -moz-linear-gradient(
			90deg,
			rgba(2, 0, 36, 1) 0%,
			rgba(24, 24, 77, 1) 50%,
			rgba(2, 0, 36, 1) 100%
		);
		background: -webkit-linear-gradient(
			90deg,
			rgba(2, 0, 36, 1) 0%,
			rgba(24, 24, 77, 1) 50%,
			rgba(2, 0, 36, 1) 100%
		);
		background: linear-gradient(
			90deg,
			rgba(2, 0, 36, 1) 0%,
			rgba(24, 24, 77, 1) 50%,
			rgba(2, 0, 36, 1) 100%
		);
		filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#020024",endColorstr="#020024",GradientType=1);
		color: white;
	}

	body {
		display: flex;
		flex-direction: column;
		flex-wrap: nowrap;
		align-items: stretch;
		min-width: 300px;
		max-width: var(--maxwidth);
		margin: 0 20px;
	}
</style>
