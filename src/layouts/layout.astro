---
interface Props {
	includeHeader?: boolean;
}

import Footer from "../components/footer.astro";
import Header from "../components/header.astro";

const { includeHeader = true } = Astro.props;

const title: string = "Damian Aldair";
const description: string =
	"Porfolio de Damian Aldair para ver experiencia, proyectos llevados a cabo y aptitudes.";

const maxwidth = 800;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		{includeHeader && <Header />}
		<main>
			<slot />
		</main>
		<Footer maxwidth={maxwidth} />
	</body>
</html>

<style define:vars={{ maxwidth }}>
	html,
	body {
		--text-color: rgb(225 240 255);
		--fg-color: rgb(200 230 255);
		--bg-color: rgb(0 20 35);
		--bg-card: rgb(255 255 255 / 0.2);
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	html {
		scroll-behavior: smooth;
		display: flex;
		flex-direction: column;
		flex-wrap: nowrap;
		align-items: center;
		background: var(--bg-color);
		color: var(--bg-card);
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	body {
		display: flex;
		flex-direction: column;
		flex-wrap: nowrap;
		align-items: stretch;
		min-width: 300px;
		max-width: calc(1px * var(--maxwidth));
		margin: 0 20px;
	}
</style>
